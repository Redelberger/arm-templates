{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Create new EA-Subscription",
            "steps": [
                {   "name": "basics",
                    "label": "Basics",
                    "elements": [
                        {   "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "location": {
                                "resourceTypes": []
                            }
                        }
                    ]
                },
                {   "name": "SubscriptionSettings",
                    "label": "Create EA-Subscription",
                    "bladeTitle": "Create EA-Subscription",
                    "elements": [
                        {   "name": "textBlock0",
                            "type": "Microsoft.Common.TextBlock",
                            "visible": true,
                            "options": {
                                "text": "Select the billing account and enrollment account used for subscription provisioning.",
                                "link": {
                                    "label": "Learn more",
                                    "uri": "https://docs.microsoft.com/azure/cloud-adoption-framework/ready/enterprise-scale/enterprise-enrollment-and-azure-ad-tenants"
                                }
                            }
                        },
                        {   "name": "esBillingApi",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "providers/Microsoft.Billing/billingAccounts?api-version=2020-05-01"
                            }
                        },
                        {   "name": "billingAccount",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Billing Account",
                            "toolTip": "",
                            "multiselect": false,
                            "selectAll": true,
                            "filter": true,
                            "filterPlaceholder": "Filter items ...",
                            "multiLine": true,
                            "visible": true,
                            "constraints": {
                                "allowedValues": "[map(steps('SubscriptionSettings').esBillingApi.value, (billing) => parse(concat('{\"label\":\"', billing.properties.displayName, '\",\"description\":\"', billing.id, '\",\"value\":\"', toLower(billing.id), '\"}')) )]",
                                "required": true
                            }
                        },
                        {   "name": "esEaApi",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "[concat(steps('SubscriptionSettings').billingAccount, '/enrollmentAccounts/', '?api-version=2019-10-01-preview')]"
                            }
                        },
                        {   "name": "eaEnrollmentAccount",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Enrollment Account",
                            "toolTip": "",
                            "multiselect": false,
                            "selectAll": true,
                            "filter": true,
                            "filterPlaceholder": "Filter items ...",
                            "multiLine": true,
                            "visible": true,
                            "constraints": {
                                "allowedValues": "[map(steps('SubscriptionSettings').esEaApi.value, (ea) => parse(concat('{\"label\":\"', ea.properties.displayName, '\",\"description\":\"', ea.id, '\",\"value\":\"', toLower(ea.id), '\"}')) )]",
                                "required": true
                            }
                        },
                        {   "name": "textBlock1",
                            "type": "Microsoft.Common.TextBlock",
                            "visible": true,
                            "options": {
                                "text": "Select subscription owner and target management group for the subscription you will create",
                                "link": {
                                    "label": "Learn more",
                                    "uri": "https://docs.microsoft.com/azure/cloud-adoption-framework/ready/enterprise-scale/management-group-and-subscription-organization"
                                }
                            }
                        },
                        {   "name": "subscriptionOwnerId",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Subscription Owner",
                            "placeholder": "Select Subscription Owner",
                            "constraints": {
                                "allowedValues": "[map(steps('SubscriptionSettings').esEaApi.value, (ea) => parse(concat('{\"label\":\"', ea.properties.displayName, '\",\"description\":\"', ea.id, '\",\"value\":\"', toLower(ea.properties.displayName), '\"}')) )]",
                                "required": true
                            }
                        },
                        {   "name": "Workload",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Workload",
                            "placeholder": "Workload..",
                            "defaultValue": "Production",
                            "toolTip": "The workload type of the subscription. It can be either Production or DevTest.",
                            "multiselect": false,
                            "selectAll": false,
                            "filter": false,
                            "filterPlaceholder": "Workload type...",
                            "multiLine": true,
                            "visible": true,
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "Production",
                                        "description": "The workload type of the subscription. It can be either Production or DevTest",
                                        "value": "Production"
                                    },
                                    {
                                        "label": "DevTest",
                                        "description": "The workload type of the subscription. It can be either Production or DevTest",
                                        "value": "DevTest"
                                    }
                                ],
                                "required": true
                            }
                        },
                        {   "name": "subscriptionName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Subscription Name",
                            "defaultValue": "SUB-AutoSub-DEV-001",
                            "placeholder": "Subscription name..",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-z0-9A-Z-]{1,30}$",
                                        "message": "Only alphanumeric characters and hyphens are allowed, and the value must be 1-30 characters long."
                                    }
                                ]
                            }
                        },
                        {   "name": "subscriptionOwnerGroupId",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Subscription Owner Group",
                            "defaultValue": "f897518b-1f7e-4fcc-9af2-01f9ecb2e239",
                            "placeholder": "Subscription Owner Group..",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-z0-9A-Z-]{1,40}$",
                                        "message": "Only alphanumeric characters and hyphens are allowed, and the value must be 1-30 characters long."
                                    }
                                ]
                            }
                        }
                    ]
                },
                {   "name": "BudgetSettings",
                    "label": "Define Budget",
                    "bladeTitle": "Define Budget",
                    "elements": [
                        {   "name": "textBlock0",
                            "type": "Microsoft.Common.TextBlock",
                            "visible": true,
                            "options": {
                                "text": "Provide the details about the planned Budget.",
                                "link": {
                                    "label": "Learn more",
                                    "uri": "https://learn.microsoft.com/en-us/azure/cost-management-billing/costs/quick-create-budget-template"
                                }
                            }
                        },
                        {   "name": "budgetName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "budgetName",
                            "defaultValue": "[concat('bill-', steps('SubscriptionSettings').subscriptionName)]",
                            "toolTip": "Use only allowed characters",
                            "placeholder": "",
                            "multiLine": false,
                            "constraints": {
                            "required": true,
                            "validations": [
                                {
                                    "regex": "^[a-z0-9A-Z-]{1,30}$",
                                    "message": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
                                },
                                {
                                    "isValid": "[endsWith(steps('BudgetSettings').budgetName, steps('SubscriptionSettings').subscriptionName)]",
                                    "message": "Must end with Subscription-Name."
                                },
                                {
                                    "isValid": "[startsWith(steps('BudgetSettings').budgetName, 'bill-')]",
                                    "message": "Must start with 'bill-'."
                                }
                            ]
                            },
                            "visible": true
                        },
                        {   "name": "amount",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Amount",
                            "defaultValue": "1000",
                            "toolTip": "Use only numbers",
                            "placeholder": "",
                            "multiLine": false,
                            "constraints": {
                            "required": true,
                            "validations": [
                                {
                                "regex": "^[0-9]{1,5}$",
                                "message": "Only numbers are allowed, and the value must be between 1-99999."
                                }
                            ]
                            },
                            "visible": true
                        },
                        {   "name": "timeGrain",
                            "type": "Microsoft.Common.DropDown",
                            "label": "timeGrain",
                            "placeholder": "",
                            "defaultValue": "Monthly",
                            "toolTip": "Use only 'Monthly', 'Quarterly', 'Annually'",
                            "multiselect": false,
                            "selectAll": false,
                            "filter": false,
                            "filterPlaceholder": "Filter items ...",
                            "multiLine": false,
                            "defaultDescription": "The time covered by a budget. Tracking of the amount will be reset based on the time grain.",
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "Monthly",
                                        "description": "This is for a Monthly budget. Tracking of the amount will be reset after one Month",
                                        "value": "Monthly"
                                    },
                                    {
                                        "label": "Quarterly",
                                        "description": "This is for a Quarterly budget. Tracking of the amount will be reset after one 3 Months",
                                        "value": "Quarterly"
                                    },
                                    {
                                        "label": "Annually",
                                        "description": "This is for a Annually budget. Tracking of the amount will be reset after one 12 Months",
                                        "value": "Annually"
                                    }
                                ],
                                "required": true
                            },
                            "visible": true
                        },
                        {   "name": "startDate",
                            "type": "Microsoft.Common.TextBox",
                            "label": "startDate",
                            "defaultValue": "[concat(substring(utcNow(), 0,8), '01')]",
                            "toolTip": "The start date must be first of the month in YYYY-MM-DD format. Future start date should not be more than three months. Past start date should be selected within the timegrain preiod.",
                            "placeholder": "",
                            "multiLine": false,
                            "constraints": {
                            "required": true,
                            "validations": [
                                {
                                "regex": "",
                                "message": "The start date must be first of the month in YYYY-MM-DD format"
                                }
                            ]
                            },
                            "visible": true
                        },
                        {   "name": "endDate",
                            "type": "Microsoft.Common.TextBox",
                            "label": "endDate",
                            "defaultValue": "[concat(substring(addHours(utcNow(), 8760), 0,8), '01')]",
                            "toolTip": "The end date for the budget in YYYY-MM-DD format. If not provided, we default this to 10 years from the start date.",
                            "placeholder": "",
                            "multiLine": false,
                            "constraints": {
                            "required": true,
                            "validations": [
                                {
                                "regex": "",
                                "message": "The end date must be first of the month in YYYY-MM-DD format"
                                }
                            ]
                            },
                            "visible": true
                        },
                        {   "name": "firstThreshold",
                            "type": "Microsoft.Common.TextBox",
                            "label": "firstThreshold",
                            "defaultValue": "90",
                            "toolTip": "Threshold value associated with a notification. Notification is sent when the cost exceeded the threshold. It is always percent and has to be between 0.01 and 1000.",
                            "placeholder": "",
                            "multiLine": false,
                            "constraints": {
                            "required": true,
                            "validations": [
                                {
                                "regex": "^[0-9]{1,3}$",
                                "message": "The end date must be first of the month in YYYY-MM-DD format"
                                }
                            ]
                            },
                            "visible": true
                        },
                        {   "name": "secondThreshold",
                            "type": "Microsoft.Common.TextBox",
                            "label": "secondThreshold",
                            "defaultValue": "110",
                            "toolTip": "Threshold value associated with a notification. Notification is sent when the cost exceeded the threshold. It is always percent and has to be between 0.01 and 1000.",
                            "placeholder": "",
                            "multiLine": false,
                            "constraints": {
                            "required": true,
                            "validations": [
                                {
                                "regex": "^[0-9]{1,3}$",
                                "message": "The end date must be first of the month in YYYY-MM-DD format"
                                }
                            ]
                            },
                            "visible": true
                        },
                        {   "name": "contactRoles",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Contact Roles",
                            "defaultValue": [
                                "Owner",
                                "Contributor",
                                "Reader"
                            ],
                            "toolTip": "The list of contact roles to send the budget notification to when the threshold is exceeded.",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "contactEmails",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Contact Emails",
                            "defaultValue": "[concat('[\"', steps('SubscriptionSettings').subscriptionOwnerId, '\"]')]",
                            "toolTip": "The email address to send the budget notification to when the threshold is exceeded. Expected format is [\"user1@domain.com\",\"user2@domain.com\"]",
                            "constraints": {
                                "required": true,
                                "regex": "",
                                "validationMessage": "The e-mail addresses must be in the format of [\"user1@domain.com\",\"user2@domain.com\"]"
                            },
                            "visible": true
                        }
                    ]
                },
                {   "name": "NetworkSettings",
                    "label": "Provide Network Settings",
                    "bladeTitle": "Provide Network Settings",
                    "elements": [
                        {   "name": "defaultNetworkRG",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Default Network RG",
                            "defaultValue": "rg-network",
                            "toolTip": "Change, if required the name of the default Network Resource Group",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "defaultNsgName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Default Nsg Name",
                            "defaultValue": "[concat('nsg-',steps('SubscriptionSettings').subscriptionName)]",
                            "toolTip": "",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "defaultVnetName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Default Vnet Name",
                            "defaultValue": "[concat('vnet-',steps('SubscriptionSettings').subscriptionName)]",
                            "toolTip": "",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "defaultSubnetName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Default Subnet Name",
                            "defaultValue": "[concat('subnet-',steps('SubscriptionSettings').subscriptionName)]",
                            "toolTip": "Change, if required the name of the default Subnet Name",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "defaultRoutingTableName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Default Routing Table Name",
                            "defaultValue": "[concat('rt-',steps('SubscriptionSettings').subscriptionName)]",
                            "toolTip": "Change, if required the name of the default Routing Table Name",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "addressSpaceVnet",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Address Space Vnet",
                            "defaultValue": "172.28.62.64/28",
                            "toolTip": "",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "addressSpaceSubnet",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Address Space Subnet",
                            "defaultValue": "172.28.62.64/28",
                            "toolTip": "",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "nextHopIpAddress",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Next Hop Ip Address",
                            "defaultValue": "172.28.63.164",
                            "toolTip": "",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        }
                    ]
                },
                {   "name": "VmSettings",
                    "label": "Create VM",
                    "bladeTitle": "Create VM",
                    "elements": [
                        {   "name": "esSubscriptionApi",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "providers/Microsoft.Subscription/aliases?api-version=2020-09-01"
                            }
                        },
                        {   "name": "DummySubscriptionId",
                            "type": "Microsoft.Common.DropDown",
                            "label": "subscription Id",
                            "toolTip": "",
                            "multiselect": false,
                            "selectAll": false,
                            "filter": true,
                            "filterPlaceholder": "Filter items ...",
                            "multiLine": true,
                            "visible": true,
                            "constraints": {
                                "allowedValues": "[map(steps('VmSettings').esSubscriptionApi.value, (sids) => parse(concat('{\"label\":\"', sids.name, '\",\"description\":\"', sids.properties.subscriptionId, '\",\"value\":\"', toLower(sids.properties.subscriptionId), '\"}')) )]",
                                "required": true
                            }
                        },
                        {   "name": "vmSize",
                            "type": "Microsoft.Compute.SizeSelector",
                            "label": "Vm Size",
                            "toolTip": "Size of VM",
                            "recommendedSizes": [
                                "Standard_B2s"
                            ],
                            "constraints": {
                                "allowedSizes": [
                                    "Standard_B2s",
                                    "Standard_B2ms",
                                    "Standard_B4ms"
                                ]
                            },
                            "osPlatform": "Windows",
                            "imageReference": {
                                "publisher": "MicrosoftWindowsServer",
                                "offer": "WindowsServer",
                                "sku": "2019-Datacenter"
                            },
                            "scope": {
                                "subscriptionId": "[steps('VmSettings').DummySubscriptionId]",
                                "location": "[steps('basics').resourceScope.location.name]"
                            },
                            "visible": true
                        },
                        {   "name": "windowsOSVersion",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Windows OS Version",
                            "defaultValue": "2019-Datacenter",
                            "toolTip": "The Windows version for the VM. This will pick a fully patched image of this given Windows version. Allowed values: 2012-R2-Datacenter, 2016-Datacenter, 2019-Datacenter, 2022-Datacenter.",
                            "constraints": {
                                "required": false,
                                "allowedValues": [
                                    {
                                        "label": "2012-R2-Datacenter",
                                        "value": "2012-R2-Datacenter"
                                    },
                                    {
                                        "label": "2016-Datacenter",
                                        "value": "2016-Datacenter"
                                    },
                                    {
                                        "label": "2019-Datacenter",
                                        "value": "2019-Datacenter"
                                    },
                                    {
                                        "label": "2022-Datacenter",
                                        "value": "2022-Datacenter"
                                    }
                                ]
                            },
                            "visible": true
                        },
                        {   "name": "vmName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Vm Name",
                            "defaultValue": "vm-test-01-d",
                            "toolTip": "Unique public DNS prefix for the deployment. The fqdn will look something like '<dnsname>.westus.cloudapp.azure.com'. Up to 62 chars, digits or dashes, lowercase, should start with a letter: must conform to '^[a-z][a-z0-9-]{1,61}[a-z0-9]$'.",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "domainToJoin",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Domain To Join",
                            "defaultValue": "",
                            "toolTip": "The FQDN of the AD domain",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "NetBIOSdomainToJoin",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Net BIO Sdomain To Join",
                            "defaultValue": "",
                            "toolTip": "The NetBIOS Name of the AD domain",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "domainUsername",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Domain Username",
                            "defaultValue": "",
                            "toolTip": "Username with domain-join privileges",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "domainPassword",
                            "type": "Microsoft.Common.PasswordBox",
                            "label": {
                                "password": "Domain Password",
                                "confirmPassword": "Confirm password"
                            },
                            "toolTip": "Password of the account with domain-join privileges",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "options": {
                                "hideConfirmation": true
                            },
                            "visible": true
                        },
                        {   "name": "ouPath",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Ou Path",
                            "defaultValue": "",
                            "toolTip": "Organizational Unit path in which the object will be created.",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "domainJoinOptions",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Domain Join Options",
                            "defaultValue": "3",
                            "toolTip": "Set of bit flags that define the join options. Default value of 3 is a combination of NETSETUP_JOIN_DOMAIN (0x00000001) & NETSETUP_ACCT_CREATE (0x00000002) i.e. will join the domain and create the account on the domain. For more information see https://msdn.microsoft.com/en-us/library/aa392154(v=vs.85).aspx",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "adminUsername",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Admin Username",
                            "defaultValue": "localAdmin",
                            "toolTip": "The name of the local administrator of the new VM.",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {   "name": "adminPassword",
                            "type": "Microsoft.Common.PasswordBox",
                            "label": {
                                "password": "Admin Password",
                                "confirmPassword": "Confirm password"
                            },
                            "toolTip": "The password for the local administrator account of the new VM.",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "options": {
                                "hideConfirmation": true
                            },
                            "visible": true
                        },
                        {   "name": "storageAccountName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Storage Account Name",
                            "defaultValue": "",
                            "toolTip": "The name of the storage account.",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "eaEnrollmentAccount": "[steps('SubscriptionSettings').eaEnrollmentAccount]",
                "Workload": "[steps('SubscriptionSettings').Workload]",
                "subscriptionName": "[steps('SubscriptionSettings').subscriptionName]",
                "subscriptionOwnerGroupId": "[steps('SubscriptionSettings').subscriptionOwnerGroupId]",
                "subscriptionOwnerId": "[steps('SubscriptionSettings').subscriptionOwnerId]",
                "managementGroupId": "[steps('basics').resourceScope.managementGroup.id]",
                "budgetName": "[steps('BudgetSettings').budgetName]",
                "amount": "[steps('BudgetSettings').amount]",
                "timeGrain": "[steps('BudgetSettings').timeGrain]",
                "startDate": "[steps('BudgetSettings').startDate]",
                "endDate": "[steps('BudgetSettings').endDate]",
                "firstThreshold": "[steps('BudgetSettings').firstThreshold]",
                "secondThreshold": "[steps('BudgetSettings').secondThreshold]",
                "contactRoles": "[steps('BudgetSettings').contactRoles]",
                "contactEmails": "[steps('BudgetSettings').contactEmails]",
                "defaultNetworkRG": "[steps('NetworkSettings').defaultNetworkRG]",
                "defaultNsgName": "[steps('NetworkSettings').defaultNsgName]",
                "defaultVnetName": "[steps('NetworkSettings').defaultVnetName]",
                "defaultSubnetName": "[steps('NetworkSettings').defaultSubnetName]",
                "defaultRoutingTableName": "[steps('NetworkSettings').defaultRoutingTableName]",
                "addressSpaceVnet": "[steps('NetworkSettings').addressSpaceVnet]",
