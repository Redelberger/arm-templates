{
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "config": {
            "isWizard": true,
            "basics": {
                "description": "Create a customized **Subscription**, see [more](https://learn.microsoft.com/en-us/azure/azure-resource-manager/managed-applications/create-uidefinition-overview).",
                "managementGroups": {
                    "constraints": {
                        "validations": [
                            {
                                "isValid": "[not(contains(managementgroup().displayName, 'Core Services'))]",
                                "message": "Can't use test subscription."
                            },
                            {
                                "permission": "Microsoft.Management/managementGroups/subscriptions/write",
                                "message": "Must have write permission to associate subscription with the management group."
                            },
                            {
                                "permission": "Microsoft.Management/managementGroups/subscriptions/delete",
                                "message": "Must have delete permission to de-associate subscription from the management group.."
                            }
                        ]
                    },
                    "resourceProviders": [
                        "Microsoft.Management"
                    ]
                },
                "subscription": {
                    "constraints": {
                        "validations": [
                            {
                                "isValid": "[not(contains(subscription().displayName, 'Test'))]",
                                "message": "Can't use test subscription."
                            },
                            {
                                "permission": "Microsoft.Consumption/budgets/write",
                                "message": "Must have write permission to create budgets by a subscription."
                            },
                            {
                                "permission": "Microsoft.Consumption/budgets/delete",
                                "message": "Must have write permission to delete budgets by a subscription."
                            }
                        ]
                    },
                    "resourceProviders": [
                        "Microsoft.Consumption"
                    ]
                },
                "resourceGroup": {
                    "constraints": {
                        "validations": [
                            {
                                "isValid": "[not(contains(resourceGroup().name, 'test'))]",
                                "message": "Resourceâ€¯group name can't contain 'test'."
                            }
                        ]
                    },
                    "allowExisting": true
                },
                "location": {
                    "label": "Allowed Locations",
                    "toolTip": "Only dedicaited locations are allowed",
                    "resourceTypes": [
                        "Microsoft.Subscription/aliases"
                    ],
                    "allowedValues": [
                        "westeurope",
                        "northeurope"
                    ],
                    "visible": true
                }
            }
        },
        "basics": [
            {}
        ],
        "steps": [
            {   "name": "lzSettings",
                "label": "Create EA-Subscription",
                "bladeTitle": "Create EA-Subscription",
                "elements": [
                    {   "name": "textBlock0",
                        "type": "Microsoft.Common.TextBlock",
                        "visible": true,
                        "options": {
                            "text": "Select the billing account and enrollment account used for subscription provisioning.",
                            "link": {
                                "label": "Learn more",
                                "uri": "https://docs.microsoft.com/azure/cloud-adoption-framework/ready/enterprise-scale/enterprise-enrollment-and-azure-ad-tenants"
                            }
                        }
                    },
                    {   "name": "mgApi",
                        "type": "Microsoft.Solutions.ArmApiControl",
                        "request": {
                            "method": "GET",
                            "path": "providers/Microsoft.Management/managementGroups?api-version=2020-02-01"
                        }
                    },
                    {   "name": "esBillingApi",
                        "type": "Microsoft.Solutions.ArmApiControl",
                        "request": {
                            "method": "GET",
                            "path": "providers/Microsoft.Billing/billingAccounts?api-version=2020-05-01"
                        }
                    },
                    {   "name": "esBillingAccount",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Billing Account",
                        "toolTip": "",
                        "multiselect": false,
                        "selectAll": true,
                        "filter": true,
                        "filterPlaceholder": "Filter items ...",
                        "multiLine": true,
                        "visible": true,
                        "constraints": {
                            "allowedValues": "[map(steps('lzSettings').esBillingApi.value, (billing) => parse(concat('{\"label\":\"', billing.properties.displayName, '\",\"description\":\"', billing.id, '\",\"value\":\"', toLower(billing.id), '\"}')) )]",
                            "required": true
                        }
                    },
                    {   "name": "esEaApi",
                        "type": "Microsoft.Solutions.ArmApiControl",
                        "request": {
                            "method": "GET",
                            "path": "[concat(steps('lzSettings').esBillingAccount, '/enrollmentAccounts/', '?api-version=2019-10-01-preview')]"
                        }
                    },
                    {   "name": "esEa",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Enrollment Account",
                        "toolTip": "",
                        "multiselect": false,
                        "selectAll": true,
                        "filter": true,
                        "filterPlaceholder": "Filter items ...",
                        "multiLine": true,
                        "visible": true,
                        "constraints": {
                            "allowedValues": "[map(steps('lzSettings').esEaApi.value, (ea) => parse(concat('{\"label\":\"', ea.properties.displayName, '\",\"description\":\"', ea.id, '\",\"value\":\"', toLower(ea.id), '\"}')) )]",
                            "required": true
                        }
                    },
                    {	"name": "textBlock1",
                        "type": "Microsoft.Common.TextBlock",
                        "visible": true,
                        "options": {
                            "text": "Select subscription owner and target management group for the subscription you will create",
                            "link": {
                                "label": "Learn more",
                                "uri": "https://docs.microsoft.com/azure/cloud-adoption-framework/ready/enterprise-scale/management-group-and-subscription-organization"
                            }
                        }
                    },
                    {   "name": "subOwnerDropDown",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Subscription Owner",
                        "placeholder": "Select Subscription Owner",
                        "constraints": {
                            "allowedValues": "[map(steps('lzSettings').esEaApi.value, (ea) => parse(concat('{\"label\":\"', ea.properties.displayName, '\",\"description\":\"', ea.id, '\",\"value\":\"', toLower(ea.id), '\"}')) )]",
                            "required": true
                        }
                    },
                    {   "name": "mgDropDown",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Management Group",
                        "placeholder": "Select Management Group",
                        "defaultValue": "[map(steps('basics').mgApi.value, (mg) => parse(concat('{\"label\":\"', mg.properties.displayName, '\",\"description\":\"', mg.id, '\",\"value\":\"', toLower(mg.name), '\"}')) )]",
                        "constraints": {
                            "allowedValues": "[map(steps('lzSettings').mgApi.value, (mg) => parse(concat('{\"label\":\"', mg.properties.displayName, '\",\"description\":\"', mg.id, '\",\"value\":\"', toLower(mg.name), '\"}')) )]",
                            "required": true
                        }
                    },
                    {   "name": "subscriptionName",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Subscription Name",
                        "defaultValue": "SUB-AutoSub-DEV-001",
                        "placeholder": "Subscription name..",
                        "constraints": {
                            "required": true,
                            "validations": [
                                {
                                    "regex": "^[a-z0-9A-Z-]{1,30}$",
                                    "message": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
                                }
                            ]
                        }
                    }
                ]
            },
            {   "name": "lzBudget",
                "label": "Define Budget",
                "bladeTitle": "Define Budget",
                "elements": [
                    {   "name": "textBlock0",
                        "type": "Microsoft.Common.TextBlock",
                        "visible": true,
                        "options": {
                            "text": "Provide the details about the planned Budget.",
                            "link": {
                                "label": "Learn more",
                                "uri": "https://learn.microsoft.com/en-us/azure/cost-management-billing/costs/quick-create-budget-template"
                            }
                        }
                    },
                    {   "name": "budgetName",
                        "type": "Microsoft.Common.TextBox",
                        "label": "budgetName",
                        "defaultValue": "[concat('bill-', steps('lzSettings').subscriptionName)]",
                        "toolTip": "Use only allowed characters",
                        "placeholder": "",
                        "multiLine": false,
                        "constraints": {
                          "required": true,
                          "validations": [
                            {
                                "regex": "^[a-z0-9A-Z-]{1,30}$",
                                "message": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
                            },
                            {
                                "isValid": "[endsWith(steps('lzBudget').budgetName, steps('lzSettings').subscriptionName)]",
                                "message": "Must end with Subscription-Name."
                            },
                            {
                                "isValid": "[startsWith(steps('lzBudget').budgetName, 'bill-')]",
                                "message": "Must start with 'bill-'."
                            }
                          ]
                        },
                        "visible": true
                    },
                    {   "name": "amount",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Amount",
                        "defaultValue": "1000",
                        "toolTip": "Use only numbers",
                        "placeholder": "",
                        "multiLine": false,
                        "constraints": {
                          "required": true,
                          "validations": [
                            {
                              "regex": "^[0-9]{1,5}$",
                              "message": "Only numbers are allowed, and the value must be between 1-99999."
                            }
                          ]
                        },
                        "visible": true
                    },
                    {   "name": "timeGrain",
                        "type": "Microsoft.Common.DropDown",
                        "label": "timeGrain",
                        "placeholder": "",
                        "defaultValue": "Monthly",
                        "toolTip": "Use only 'Monthly', 'Quarterly', 'Annually'",
                        "multiselect": false,
                        "selectAll": false,
                        "filter": false,
                        "filterPlaceholder": "Filter items ...",
                        "multiLine": false,
                        "defaultDescription": "The time covered by a budget. Tracking of the amount will be reset based on the time grain.",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "Monthly",
                                    "description": "This is for a Monthly budget. Tracking of the amount will be reset after one Month",
                                    "value": "Monthly"
                                },
                                {
                                    "label": "Quarterly",
                                    "description": "This is for a Quarterly budget. Tracking of the amount will be reset after one 3 Months",
                                    "value": "Quarterly"
                                },
                                {
                                    "label": "Annually",
                                    "description": "This is for a Annually budget. Tracking of the amount will be reset after one 12 Months",
                                    "value": "Annually"
                                }
                            ],
                            "required": true
                        },
                        "visible": true
                    },
                    {   "name": "startDate",
                        "type": "Microsoft.Common.TextBox",
                        "label": "startDate",
                        "defaultValue": "2022-01-01",
                        "toolTip": "The start date must be first of the month in YYYY-MM-DD format. Future start date should not be more than three months. Past start date should be selected within the timegrain preiod.",
                        "placeholder": "",
                        "multiLine": false,
                        "constraints": {
                          "required": true,
                          "validations": [
                            {
                              "regex": "^\\d{4}\\-(0[1-9]|1[012])\\-(0[1-9]|[12][0-9]|3[01])$",
                              "message": "The start date must be first of the month in YYYY-MM-DD format"
                            }
                          ]
                        },
                        "visible": true
                    },
                    {   "name": "endDate",
                        "type": "Microsoft.Common.TextBox",
                        "label": "endDate",
                        "defaultValue": "2031-12-31",
                        "toolTip": "The end date for the budget in YYYY-MM-DD format. If not provided, we default this to 10 years from the start date.",
                        "placeholder": "",
                        "multiLine": false,
                        "constraints": {
                          "required": true,
                          "validations": [
                            {
                              "regex": "^\\d{4}\\-(0[1-9]|1[012])\\-(0[1-9]|[12][0-9]|3[01])$",
                              "message": "The end date must be first of the month in YYYY-MM-DD format"
                            }
                          ]
                        },
                        "visible": true
                    },
                    {   "name": "firstThreshold",
                        "type": "Microsoft.Common.TextBox",
                        "label": "firstThreshold",
                        "defaultValue": "90",
                        "toolTip": "Threshold value associated with a notification. Notification is sent when the cost exceeded the threshold. It is always percent and has to be between 0.01 and 1000.",
                        "placeholder": "",
                        "multiLine": false,
                        "constraints": {
                          "required": true,
                          "validations": [
                            {
                              "regex": "^[0-9]{1,3}$",
                              "message": "The end date must be first of the month in YYYY-MM-DD format"
                            }
                          ]
                        },
                        "visible": true
                    },
                    {   "name": "secondThreshold",
                        "type": "Microsoft.Common.TextBox",
                        "label": "secondThreshold",
                        "defaultValue": "110",
                        "toolTip": "Threshold value associated with a notification. Notification is sent when the cost exceeded the threshold. It is always percent and has to be between 0.01 and 1000.",
                        "placeholder": "",
                        "multiLine": false,
                        "constraints": {
                          "required": true,
                          "validations": [
                            {
                              "regex": "^[0-9]{1,3}$",
                              "message": "The end date must be first of the month in YYYY-MM-DD format"
                            }
                          ]
                        },
                        "visible": true
                    },
                    {   "name": "contactEmails",
                        "type": "Microsoft.Common.TextBox",
                        "label": "contactEmails",
                        "defaultValue": "[steps('lzSettings').subOwnerDropDown]",
                        "toolTip": "The list of email addresses to send the budget notification to when the threshold is exceeded.",
                        "placeholder": "",
                        "multiLine": false,
                        "constraints": {
                          "required": true,
                          "validations": [
                            {
                              "regex": "^[a-z0-9]+@[a-z]+\\.[a-z]{2,3}$",
                              "message": "The e-mail address must be in user@domain.tld format"
                            }
                          ]
                        },
                        "visible": true
                    }
                ]
            }
        ],
        "outputs": {
            "billingAccount": "[steps('lzSettings').esEa]",
            "subscriptionName": "[steps('lzSettings').subscriptionName]",
            "subscriptionOwnerId": "[steps('lzSettings').subOwnerDropDown]",
            "managementGroupId": "[steps('lzSettings').mgDropDown]",
            "budgetName": "[steps('lzBudget').budgetName]",
            "amount": "[steps('lzBudget').amount]",
            "timeGrain": "[steps('lzBudget').timeGrain]",
            "startDate": "[steps('lzBudget').startDate]",
            "endDate": "[steps('lzBudget').endDate]",
            "firstThreshold": "[steps('lzBudget').firstThreshold]",
            "secondThreshold": "[steps('lzBudget').secondThreshold]",
            "contactEmails": "[steps('lzBudget').contactEmails]"
        }
    }
}
