                                "required": false,
                                "allowedValues": [
                                    {
                                        "label": "Monthly",
                                        "value": "Monthly"
                                    },
                                    {
                                        "label": "Quarterly",
                                        "value": "Quarterly"
                                    },
                                    {
                                        "label": "Annually",
                                        "value": "Annually"
                                    }
                                ]
                            },
                            "visible": true
