                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {
                            "name": "amount",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Amount",
                            "defaultValue": "1000",
